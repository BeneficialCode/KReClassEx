		<Command Name="wtl_EDIT_PASTE" Symbol="ID_EDIT_PASTE" Id="0xE125"/>

		<Command Name="wtl_EDIT_SELECT_ALL" Symbol="ID_EDIT_SELECT_ALL" Id="0xE12A"/>
		<Command Name="wtl_EDIT_UNDO" Symbol="ID_EDIT_UNDO" Id="0xE12B"/>
		<Command Name="wtl_EDIT_REDO" Symbol="ID_EDIT_REDO" Id="0xE12C"/>

		<Command Name="wtl_WINDOW_NEW" Symbol="ID_WINDOW_NEW" Id="0xE130"/>
		<Command Name="wtl_WINDOW_SPLIT" Symbol="ID_WINDOW_SPLIT" Id="0xE135"/>

		<Command Name="wtl_APP_ABOUT" Symbol="ID_APP_ABOUT" Id="0xE140"/>
		<Command Name="wtl_APP_EXIT" Symbol="ID_APP_EXIT" Id="0xE141"/>

		<Command Name="wtl_NEXT_PANE" Symbol="ID_NEXT_PANE" Id="0xE150"/>
		<Command Name="wtl_PREV_PANE" Symbol="ID_PREV_PANE" Id="0xE151"/>
		<Command Name="wtl_PANE_CLOSE" Symbol="ID_PANE_CLOSE" Id="0xE152"/>

		<Command Name="wtl_VIEW_TOOLBAR" Symbol="ID_VIEW_TOOLBAR" Id="0xE800"/>
		<Command Name="wtl_VIEW_STATUS_BAR" Symbol="ID_VIEW_STATUS_BAR" Id="0xE801"/>
		<Command Name="wtl_VIEW_RIBBON" Symbol="ID_VIEW_RIBBON" Id="0xE804"/>

		<Command Name="wtl_PROJECT_RESET" Symbol="ID_BTN_RESET" LabelTitle="Reset">
			<Command.TooltipTitle>Reset</Command.TooltipTitle>
			<Command.TooltipDescription>
				Reset the project
			</Command.TooltipDescription>
			<Command.LargeImages>
				<Image Source="./res/home_large_reset.bmp"/>
			</Command.LargeImages>
		</Command>
		
		<Command Name="wtl_KERNEL_CONNECT" Symbol="ID_BTN_CONNECT" LabelTitle="Connect">
			<Command.TooltipTitle>Connect</Command.TooltipTitle>
			<Command.TooltipDescription>
				Connect the kernel debugger
			</Command.TooltipDescription>
			<Command.LargeImages>
				<Image Source="./res/home_large_select.bmp"/>
			</Command.LargeImages>
		</Command>
		
		<Command Name="wtl_CLASS_NEW" Symbol="ID_BTN_NEW" LabelTitle="New">
			<Command.TooltipTitle>New</Command.TooltipTitle>
			<Command.TooltipDescription>
				New a class
			</Command.TooltipDescription>
			<Command.LargeImages>
				<Image Source="./res/home_large_class.bmp"/>
			</Command.LargeImages>
		</Command>
		
		<Command Name="wtl_CLASS_EDIT" Symbol="ID_BTN_EDIT" LabelTitle="Edit">
			<Command.TooltipTitle>Edit</Command.TooltipTitle>
			<Command.TooltipDescription>
				Select a class to edit
			</Command.TooltipDescription>
			<Command.LargeImages>
				<Image Source="./res/home_large_edit.bmp"/>
			</Command.LargeImages>
		</Command>
		
		<Command Name="wtl_CLASS_DELETE" Symbol="ID_BTN_DELETE" LabelTitle="Delete">
			<Command.TooltipTitle>Delete</Command.TooltipTitle>
			<Command.TooltipDescription>
				Delete a class
			</Command.TooltipDescription>
			<Command.SmallImages>
				<Image Source="./res/home_small_delete.bmp"/>
			</Command.SmallImages>
		</Command>
		
		<Command Name="wtl_CLASS_CLEAN_UP" Symbol="ID_BTN_CLEAN_UP" LabelTitle="Clean Up">
			<Command.TooltipTitle>Clean Up</Command.TooltipTitle>
			<Command.TooltipDescription>
				Clean Up
			</Command.TooltipDescription>
			<Command.SmallImages>
				<Image Source="./res/home_small_clean_up.bmp"/>
			</Command.SmallImages>
		</Command>
		
		<Command Name="wtl_CLASS_CODE" Symbol="ID_BTN_CODE" LabelTitle="Code">
			<Command.TooltipTitle>Code</Command.TooltipTitle>
			<Command.TooltipDescription>
				Code for a class
			</Command.TooltipDescription>
			<Command.SmallImages>
				<Image Source="./res/home_small_code.bmp"/>
			</Command.SmallImages>
		</Command>
		
		<Command Name="wtl_CODE_GENERATE" Symbol="ID_BTN_GENERATE" LabelTitle="Generate">
			<Command.TooltipTitle>Generate</Command.TooltipTitle>
			<Command.TooltipDescription>
				Class code generate
			</Command.TooltipDescription>
			<Command.LargeImages>
				<Image Source="./res/home_large_generate.bmp"/>
			</Command.LargeImages>
		</Command>
		
		<Command Name="wtl_CODE_HEADER" Symbol="ID_BTN_HEADER" LabelTitle="Header">
			<Command.TooltipTitle>Header</Command.TooltipTitle>
			<Command.TooltipDescription>
				Code file header
			</Command.TooltipDescription>
			<Command.SmallImages>
				<Image Source="./res/home_small_header.bmp"/>
			</Command.SmallImages>
		</Command>
		
		<Command Name="wtl_CODE_FOOTER" Symbol="ID_BTN_FOOTER" LabelTitle="Footer">
			<Command.TooltipTitle>Footer</Command.TooltipTitle>
			<Command.TooltipDescription>
				Code file footer
			</Command.TooltipDescription>
			<Command.SmallImages>
				<Image Source="./res/home_small_footer.bmp"/>
			</Command.SmallImages>
		</Command>
		
		<Command Name="wtl_CODE_TYPEDEF" Symbol="ID_BTN_TYPEDEF" LabelTitle="TypeDef">
			<Command.TooltipTitle>TypeDef</Command.TooltipTitle>
			<Command.TooltipDescription>
				Type Define
			</Command.TooltipDescription>
			<Command.SmallImages>
				<Image Source="./res/home_small_typedef.bmp"/>
			</Command.SmallImages>
		</Command>
		
		<Command Name="wtl_TOOLS_NOTES" Symbol="ID_BTN_NOTES" LabelTitle="Notes">
			<Command.TooltipTitle>Notes</Command.TooltipTitle>
			<Command.TooltipDescription>
				Notes
			</Command.TooltipDescription>
			<Command.LargeImages>
				<Image Source="./res/home_large_notes.bmp"/>
			</Command.LargeImages>
		</Command>
		
		<Command Name="wtl_TOOLS_SEARCH" Symbol="ID_BTN_SEARCH" LabelTitle="Search">
			<Command.TooltipTitle>Search</Command.TooltipTitle>
			<Command.TooltipDescription>
				Search
			</Command.TooltipDescription>
			<Command.LargeImages>
				<Image Source="./res/home_large_search.bmp"/>
			</Command.LargeImages>
		</Command>
		
		<Command Name="wtl_TOOLS_CONSOLE" Symbol="ID_BTN_CONSOLE" LabelTitle="Console">
			<Command.TooltipTitle>Console</Command.TooltipTitle>
			<Command.TooltipDescription>
				Console for debug
			</Command.TooltipDescription>
			<Command.LargeImages>
				<Image Source="./res/home_large_console.bmp"/>
			</Command.LargeImages>
		</Command>
				 
		<Command Name="wtl_TOOLS_MODULES" Symbol="ID_BTN_MODULES" LabelTitle="Modules">
			<Command.TooltipTitle>Notes</Command.TooltipTitle>
			<Command.TooltipDescription>
				System Kernel Modules
			</Command.TooltipDescription>
			<Command.LargeImages>
				<Image Source="./res/home_large_modules.bmp"/>
			</Command.LargeImages>
		</Command>


		<!-- Tabs -->
		<Command Name="TabHome" Symbol="ID_TAB_HOME"
                 LabelTitle="Home" />

		<Command Name="TabModify" Symbol="ID_TAB_MODIFY"
				 LabelTitle="Modify"/>

		<Command Name="TabSettings" Symbol="ID_TAB_SETTINGS"
				 LabelTitle="Settings"/>

		<!-- Groups -->
		<Command Name="GroupProject" Symbol="ID_GROUP_PROJECT"
				 LabelTitle="Project"/>
		<Command Name="GroupKernel" Symbol="ID_GROUP_KERNEL"
				 LabelTitle="Kernel"/>
		<Command Name="GroupClass" Symbol="ID_GROUP_CLASS"
				 LabelTitle="Class"/>
		<Command Name="GroupCode" Symbol="ID_GROUP_CODE"
				 LabelTitle="Code"/>
		<Command Name="GroupTools" Symbol="ID_GROUP_TOOLS"
				 LabelTitle="Tools"/>

		<!-- App Menu, MRU list, Help button and Quick Access Toolbar -->
		<Command Name="AppMenu" Symbol="ID_RIBBON_APP_MENU"/>
		<Command Name="SaveMore" Symbol="ID_SAVEMORE"/>
		<Command Name="PrintMore" Symbol="ID_PRINTMORE"/>

		<Command Name="QAT" Symbol="ID_RIBBON_QAT"/>
	</Application.Commands>

	<Application.Views>
		<Ribbon>
			<!-- Application Menu -->
			<Ribbon.ApplicationMenu >
				<ApplicationMenu CommandName="AppMenu" >
					<MenuGroup Class="StandardItems" >
						<Button CommandName="wtl_FILE_NEW"/>
						<Button CommandName="wtl_FILE_OPEN"/>
						<!-- Saving SplitButton -->
						<SplitButton CommandName="SaveMore">
							<SplitButton.ButtonItem>
								<Button CommandName="wtl_FILE_SAVE" />
							</SplitButton.ButtonItem>
							<SplitButton.MenuGroups>
								<MenuGroup Class="StandardItems">
									<Button CommandName="wtl_FILE_SAVE" />
									<Button CommandName="wtl_FILE_SAVE_AS" />
								</MenuGroup>
							</SplitButton.MenuGroups>
						</SplitButton>
						<!-- Printing SplitButton -->
						<SplitButton CommandName="PrintMore">
							<SplitButton.ButtonItem>
								<Button CommandName="wtl_FILE_PRINT"/>
							</SplitButton.ButtonItem>
							<SplitButton.MenuGroups>
								<MenuGroup Class="StandardItems">
									<Button CommandName="wtl_FILE_PRINT" />
									<Button CommandName="wtl_FILE_PRINT_PREVIEW"/>
									<Button CommandName="wtl_FILE_PRINT_SETUP"/>
								</MenuGroup>
							</SplitButton.MenuGroups>
						</SplitButton>
					</MenuGroup>
					<MenuGroup >
						<Button CommandName="wtl_APP_EXIT"/>
					</MenuGroup>
				</ApplicationMenu>
			</Ribbon.ApplicationMenu >

			
			<!-- Help button -->
			<Ribbon.HelpButton>
				<HelpButton CommandName="wtl_APP_ABOUT" />
			</Ribbon.HelpButton>

			<!-- QAT (Quick Access Toolbar) -->
			<Ribbon.QuickAccessToolbar>
				<QuickAccessToolbar CommandName="QAT">
					<QuickAccessToolbar.ApplicationDefaults>
						<Button CommandName="wtl_FILE_NEW"/>
						<Button CommandName="wtl_FILE_OPEN"/>
						<Button CommandName="wtl_FILE_SAVE"/>
						<Button CommandName="wtl_FILE_PRINT"/>
					</QuickAccessToolbar.ApplicationDefaults>
				</QuickAccessToolbar>
			</Ribbon.QuickAccessToolbar>

			<Ribbon.Tabs>

				<Tab CommandName="TabHome">
					<Tab.ScalingPolicy>
						<ScalingPolicy>
							<ScalingPolicy.IdealSizes>
								<Scale Group="GroupClass" Size="Medium"/>
								<Scale Group="GroupCode" Size="Medium"/>
							</ScalingPolicy.IdealSizes>
						</ScalingPolicy>
					</Tab.ScalingPolicy>
					
					<Group CommandName="GroupProject" SizeDefinition="OneButton">
						<Button CommandName="wtl_PROJECT_RESET"/>
					</Group>
				
					<Group CommandName="GroupKernel" SizeDefinition="OneButton">
						<Button CommandName="wtl_KERNEL_CONNECT"/>
					</Group>
				
					<Group CommandName="GroupClass" SizeDefinition="FiveButtons">
						<Button CommandName="wtl_CLASS_NEW"/>
						<Button CommandName="wtl_CLASS_EDIT"/>
						<Button CommandName="wtl_CLASS_DELETE"/>
						<Button CommandName="wtl_CLASS_CLEAN_UP"/>
						<Button CommandName="wtl_CLASS_CODE"/>
					</Group>
				
					<Group CommandName="GroupCode" SizeDefinition="FourButtons">
						<Button CommandName="wtl_CODE_GENERATE"/>
						<Button CommandName="wtl_CODE_HEADER"/>
						<Button CommandName="wtl_CODE_FOOTER"/>
						<Button CommandName="wtl_CODE_TYPEDEF"/>
					</Group>
				
					<Group CommandName="GroupTools" SizeDefinition="FourButtons">
						<Button CommandName="wtl_TOOLS_NOTES"/>
						<Button CommandName="wtl_TOOLS_CONSOLE"/>
						<Button CommandName="wtl_TOOLS_SEARCH"/>
						<Button CommandName="wtl_TOOLS_MODULES"/>
					</Group>
				</Tab>

				<Tab CommandName="TabModify">

				</Tab>

				<Tab CommandName="TabSettings">

				</Tab>
			</Ribbon.Tabs>
		</Ribbon>
	</Application.Views>
</Application>
